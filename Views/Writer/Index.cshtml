@model IEnumerable<PostIndexViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">AlejoF Simple Blog</h1>
    <p>Drafts</p>
</div>

<div class="container my-5 text-left">
    @foreach (var post in Model)
    {
        <div class="card my-3">
            <div class="card-body">
                <h2 class="card-title">@post.Title</h2>
                <p class="small">by @post.Author</p>
                <p class="card-text"><pre>@post.Content</pre></p>

                <a asp-action="Detail" asp-controller="Home" asp-route-slug="@post.Slug">Read more</a>
                <a asp-action="Edit" asp-route-slug="@post.Slug" class="d-inline-block mx-3">Edit</a>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            No drafts (yet)
        </div>
    }
    <div class="py-5">
        <a asp-action="Edit" class="btn btn-primary">New Post</a>
    </div>
</div>

